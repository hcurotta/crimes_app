<h1>Listing crimes</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Block</th>
    <th>Crime type</th>
    <th>Description</th>
    <th>Location type</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @crimes.each do |crime| %>
  <tr>
    <td><%= crime.date %></td>
    <td><%= crime.block %></td>
    <td><%= crime.crime_type %></td>
    <td><%= crime.description %></td>
    <td><%= crime.location_type %></td>
    <td><%= crime.latitude %></td>
    <td><%= crime.longitude %></td>
    <td><%= link_to 'Show', crime %></td>
    <td><%= link_to 'Edit', edit_crime_path(crime) %></td>
    <td><%= link_to 'Destroy', crime, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

